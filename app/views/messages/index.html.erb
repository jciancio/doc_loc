<h1 class='container forum-title well'><br>Welcome to the Doc Loc Forum</h1>
<div class="message-list">
  <% @messages.each do |message| %>
  <div class='col-md-4'>
    <div class='message'>
      <%= render message %>
      <p>Created by: <%= message.user.email %>
        <%= time_ago_in_words message.created_at %> ago</p>
      <p>Comments: <%= message.comments.count %></p>
      <br>
      <a class='btn-custom'<%= link_to 'View Discussion', message %>></a>
    </div>
  </div>
  <% end %>
</div>
